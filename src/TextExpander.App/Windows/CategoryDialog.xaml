<Window x:Class="TextExpander.App.Windows.CategoryDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="카테고리 추가" Height="550" Width="450"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">
    
    <Window.Resources>
        <!-- Bool to Visibility Converter -->
        <BooleanToVisibilityConverter x:Key="BoolToVisConverter"/>
        
        <!-- Selected Color Border Converter -->
        <Style x:Key="SelectedBorderStyle" TargetType="Border">
            <Setter Property="BorderBrush" Value="LightGray"/>
            <Style.Triggers>
                <DataTrigger Binding="{Binding IsSelected}" Value="True">
                    <Setter Property="BorderBrush" Value="DodgerBlue"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>
    
    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- 카테고리 이름 -->
        <StackPanel Grid.Row="0" Margin="0,0,0,15">
            <TextBlock Text="카테고리 이름" FontWeight="Bold" Margin="0,0,0,5"/>
            <TextBox Text="{Binding CategoryName, UpdateSourceTrigger=PropertyChanged}" 
                     FontSize="14" Padding="5"/>
        </StackPanel>
        
        <!-- 색상 선택 -->
        <StackPanel Grid.Row="1">
            <TextBlock Text="색상 선택" FontWeight="Bold" Margin="0,0,0,10"/>
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <ItemsControl ItemsSource="{Binding ColorPalette}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <UniformGrid Columns="2"/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Margin="0,5" 
                                    Padding="5" 
                                    Background="Transparent" 
                                    BorderThickness="3" 
                                    CornerRadius="5"
                                    Cursor="Hand"
                                    MouseLeftButtonDown="ColorItem_Click"
                                    Tag="{Binding}"
                                    Style="{StaticResource SelectedBorderStyle}">
                                <Grid>
                                    <StackPanel Orientation="Horizontal">
                                        <Border Background="{Binding BackgroundColor}" 
                                                BorderBrush="DarkGray" 
                                                BorderThickness="1"
                                                Width="140" 
                                                Height="40" 
                                                CornerRadius="5" 
                                                Margin="0,0,10,0">
                                            <TextBlock Text="{Binding Name}" 
                                                      Foreground="{Binding ForegroundColor}" 
                                                      VerticalAlignment="Center" 
                                                      HorizontalAlignment="Center"
                                                      FontWeight="Bold"/>
                                        </Border>
                                        <TextBlock Text="{Binding Name}" 
                                                  VerticalAlignment="Center" 
                                                  FontSize="14"/>
                                    </StackPanel>
                                    <!-- 선택 표시 아이콘 -->
                                    <TextBlock Text="✓" 
                                              FontSize="24" 
                                              Foreground="Green" 
                                              FontWeight="Bold"
                                              HorizontalAlignment="Right" 
                                              VerticalAlignment="Center"
                                              Margin="0,0,10,0"
                                              Visibility="{Binding IsSelected, Converter={StaticResource BoolToVisConverter}}"/>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>
        </StackPanel>
        
        <!-- 버튼 -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,15,0,0">
            <Button Content="확인" Width="80" Margin="0,0,10,0" 
                    Background="LightGreen" FontWeight="Bold"
                    Click="OkButton_Click"/>
            <Button Content="취소" Width="80" 
                    Click="CancelButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
